{
    "version": "1.0.0",
    "name": "smakecloud/skeema",
    "description": "Laravel Skeema Migrations",
    "require": {
        "php": "^8.0",
        "illuminate/console": "^8.0|^9.0|^10.0",
        "illuminate/database": "^8.0|^9.0|^10.0",
        "illuminate/filesystem": "^8.0|^9.0|^10.0",
        "illuminate/support": "^8.0|^9.0|^10.0",
        "symfony/console": "^5.0|^6.0",
        "symfony/process": "^5.0|^6.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.12",
        "phpunit/phpunit": "^7.2|^8.4|^9.5",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Smakecloud\\Skeema\\": "src"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "lint": "vendor/bin/phpcs --standard=PSR2 --colors src/ tests/",
        "post-autoload-dump": [
            "@php vendor/bin/testbench package:discover --ansi"
        ]
    },
    "license": "MIT",
    "authors": [
        {
            "name": "kp alter",
            "email": "x@y.ze"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "barryvdh/laravel-ide-helper"
            ],
            "providers": [
                "Smakecloud\\Skeema\\ServiceProvider"
            ]
        }
    }
}
